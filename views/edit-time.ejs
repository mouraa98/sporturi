<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Time</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/edit-time.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" type="image/png" href="/assets/favicon.png">
</head>
<body>
    <div class="container">
        <h1><i class="fas fa-edit"></i> Atualização</h1>

        <% if (typeof grupoIndex !== 'undefined') { %>
            <form action="/user/campeonatos/<%= campeonatoId %>/update-time/grupos/<%= grupoIndex %>/<%= timeIndex %>" method="POST">
                <input type="hidden" name="grupoIndex" value="<%= grupoIndex %>">
        <% } else { %>
            <form action="/user/campeonatos/<%= campeonatoId %>/update-time/pontos-corridos/<%= timeIndex %>" method="POST">
        <% } %>

                <div class="form-group">
                    <label for="nome"><i class="fas fa-shield-alt"></i> Nome do Time:</label>
                    <input type="text" id="nome" name="nome" value="<%= time.nome %>" required>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="vitorias"><i class="fas fa-trophy"></i> Vitórias:</label>
                        <input type="number" id="vitorias" name="vitorias" value="<%= time.vitorias %>" required>
                    </div>
                    <div class="form-group">
                        <label for="jogos"><i class="fas fa-futbol"></i> Jogos:</label>
                        <input type="number" id="jogos" name="jogos" value="<%= time.jogos %>" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="empates"><i class="fas fa-handshake"></i> Empates:</label>
                        <input type="number" id="empates" name="empates" value="<%= time.empates %>" required>
                    </div>
                    <div class="form-group">
                        <label for="derrotas"><i class="fas fa-times"></i> Derrotas:</label>
                        <input type="number" id="derrotas" name="derrotas" value="<%= time.derrotas %>" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="golsMarcados"><i class="fas fa-futbol"></i> Gols Marcados:</label>
                        <input type="number" id="golsMarcados" name="golsMarcados" value="<%= time.golsMarcados %>" required>
                    </div>
                    <div class="form-group">
                        <label for="golsSofridos"><i class="fas fa-skull"></i> Gols Sofridos:</label>
                        <input type="number" id="golsSofridos" name="golsSofridos" value="<%= time.golsSofridos %>" required>
                    </div>
                </div>

                <div class="form-group">
                    <input type="hidden" name="timeIndex" value="<%= timeIndex %>">
                    <button type="submit"><i class="fas fa-save"></i> Atualizar Time</button>
                </div>
            </form>

        <% if (typeof grupoIndex !== 'undefined') { %>
            <a href="/user" class="admin-button"><i class="fas fa-arrow-left"></i> Voltar para Grupos</a>
        <% } else { %>
            <a href="/user" class="admin-button"><i class="fas fa-arrow-left"></i> Voltar para Pontos Corridos</a>
        <% } %>
    </div>
</body>
</html>